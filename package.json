{
  "name": "github-project-automation",
  "version": "1.0.0",
  "private": true,
  "description": "Reusable GitHub Action for cross-repo PR/Issue/Project automation",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "bundle": "esbuild src/index.ts --bundle --platform=node --format=esm --target=node24 --outfile=dist/index.js",
    "test": "vitest run"
  },
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^9.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "esbuild": "^0.27.3",
    "typescript": "^5.4.5",
    "vitest": "^4.0.18"
  }
}
